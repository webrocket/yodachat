<div id="landing" role="main">
  <% if flash[:error] %>
    <div id="error">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>

  <div class="hero">
    <h2>To chat, Master Yoda invites you!</h2>

    <form action="/new" method="post" id="new_chat">
      <div class="buttons">
        <input type="submit" id="new_chat_button" class="btn large" value="New room create!">
      </div>
    </form>
  </div>
</div>

<div id="jedi_fight_wrapper">
  <ul id="jedi_fight">
    <li class="back"></li>
    <li class="middle"></li>
    <li class="jedi"></li>
    <li class="front"></li>
  </ul>
</div>
